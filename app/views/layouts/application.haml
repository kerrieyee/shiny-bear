!!!DOCTYPE html
%html
  %head
    %title ShinyBear
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{ href:'http://fonts.googleapis.com/css?family=Open+Sans:700,300,400',  rel:'stylesheet', type:'text/css' }
  %body
    - if notice
      %p.notice= notice
    - if alert
      %p.alert= alert
    = yield
